.hentry.yui-gf.row
  .vcard.author
    .yui-u.first.centered
      = link_to image_tag( group.avatar_photo_url(:thumb), :class => "polaroid" ), group_path(group)
    .yui-g
      .yui-u.first
        %h2= link_to group.name, group_path(group)
        %p= "Owner:" + group.owner.login
        %p= "Members:" + group.memberships.count.to_s
      
        
      .yui-u{"style"=>"overflow:hidden"}
        %p More stuff will go here.
        
